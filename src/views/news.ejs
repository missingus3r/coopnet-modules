<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novedades - <%= cooperativaName %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta name="csrf-token" content="">
</head>
<body class="modular-view <%= darkMode ? 'dark-mode' : '' %>">
    <div class="modular-header">
        <h1><i class="material-icons">article</i> Novedades - <%= cooperativaName %></h1>
        <% if (isAdmin) { %>
            <button onclick="openNewsModal()" class="btn btn-primary">
                <i class="material-icons">add</i> Crear Novedad
            </button>
        <% } %>
    </div>

    <div class="news-container">
        <% if (news && news.length > 0) { %>
            <div class="news-grid">
                <% news.forEach(function(article) { %>
                    <article class="news-card">
                        <div class="news-card-header">
                            <h2><%= article.title %></h2>
                            <% if (article.priority !== 'normal') { %>
                                <span class="priority priority-<%= article.priority %>">
                                    <%= article.priority === 'urgent' ? 'Urgente' :
                                        article.priority === 'high' ? 'Alta' : 'Baja' %>
                                </span>
                            <% } %>
                        </div>

                        <div class="news-meta">
                            <span class="author">
                                <i class="material-icons">person</i>
                                <% if (article.author && article.author.firstName && article.author.lastName) { %>
                                    <%= article.author.firstName %> <%= article.author.lastName %>
                                <% } else if (article.createdBy === 'superadmin') { %>
                                    MiCope.org Admin
                                <% } else { %>
                                    Autor no disponible
                                <% } %>
                            </span>
                            <span class="date">
                                <i class="material-icons">schedule</i>
                                <%= new Date(article.publishedAt || article.createdAt).toLocaleDateString('es-ES', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric'
                                }) %>
                            </span>
                        </div>

                        <div class="news-excerpt">
                            <%= article.autoExcerpt %>
                        </div>

                        <div class="news-footer">
                            <div class="news-stats">
                                <span class="stat">
                                    <i class="material-icons">visibility</i>
                                    <%= article.views || 0 %>
                                </span>
                                <span class="stat">
                                    <i class="material-icons">favorite</i>
                                    <%= article.likeCount %>
                                </span>
                            </div>
                            <button onclick="openDetailModal('<%= article._id %>')" class="btn btn-read-more">
                                Leer más <i class="material-icons">arrow_forward</i>
                            </button>
                        </div>

                        <% if (article.tags && article.tags.length > 0) { %>
                            <div class="news-tags">
                                <% article.tags.forEach(function(tag) { %>
                                    <span class="tag">#<%= tag %></span>
                                <% }) %>
                            </div>
                        <% } %>
                    </article>
                <% }) %>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (hasPrevPage) { %>
                        <a href="/news?page=<%= prevPage %>&<%= Object.entries(locals).filter(([k,v]) => ['cooperativaId','cooperativaName','userName','userId','isAdmin','darkMode','token'].includes(k)).map(([k,v]) => `${k}=${encodeURIComponent(v)}`).join('&') %>" class="btn btn-secondary">
                            <i class="material-icons">chevron_left</i> Anterior
                        </a>
                    <% } %>
                    
                    <span class="page-info">
                        Página <%= currentPage %> de <%= totalPages %>
                    </span>
                    
                    <% if (hasNextPage) { %>
                        <a href="/news?page=<%= nextPage %>&<%= Object.entries(locals).filter(([k,v]) => ['cooperativaId','cooperativaName','userName','userId','isAdmin','darkMode','token'].includes(k)).map(([k,v]) => `${k}=${encodeURIComponent(v)}`).join('&') %>" class="btn btn-secondary">
                            Siguiente <i class="material-icons">chevron_right</i>
                        </a>
                    <% } %>
                </div>
            <% } %>
        <% } else { %>
            <div class="empty-state">
                <i class="material-icons">article</i>
                <h3>No hay novedades</h3>
                <p>Aún no se han publicado novedades en tu cooperativa.</p>
            </div>
        <% } %>
    </div>

    <!-- Modal para detalle de novedad -->
    <div id="detailModal" class="modal">
        <div class="modal-content modal-large">
            <div class="modal-header">
                <h2><i class="material-icons">article</i> Detalle de Novedad</h2>
                <button onclick="closeDetailModal()" class="btn-close">
                    <i class="material-icons">close</i>
                </button>
            </div>

            <div id="detailContent" class="detail-content">
                <div class="loading">
                    <i class="material-icons rotating">refresh</i>
                    Cargando...
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para crear nueva novedad -->
    <div id="newsModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="material-icons">add_circle</i> Nueva Novedad</h2>
                <button onclick="closeNewsModal()" class="btn-close">
                    <i class="material-icons">close</i>
                </button>
            </div>

            <form id="newsForm" class="news-form">
                <div class="form-group">
                    <label for="title">
                        <i class="material-icons">title</i>
                        Título <span class="required">*</span>
                    </label>
                    <input
                        type="text"
                        id="title"
                        name="title"
                        maxlength="200"
                        required
                        placeholder="Título de la novedad"
                    >
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="priority">
                            <i class="material-icons">flag</i>
                            Prioridad
                        </label>
                        <select id="priority" name="priority">
                            <option value="low">Baja</option>
                            <option value="normal" selected>Normal</option>
                            <option value="high">Alta</option>
                            <option value="urgent">Urgente</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="status">
                            <i class="material-icons">publish</i>
                            Estado
                        </label>
                        <select id="status" name="status">
                            <option value="draft">Borrador</option>
                            <option value="published" selected>Publicado</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="excerpt">
                        <i class="material-icons">short_text</i>
                        Resumen
                    </label>
                    <textarea
                        id="excerpt"
                        name="excerpt"
                        rows="2"
                        maxlength="300"
                        placeholder="Breve resumen de la novedad (opcional)"
                    ></textarea>
                </div>

                <div class="form-group">
                    <label for="content">
                        <i class="material-icons">description</i>
                        Contenido <span class="required">*</span>
                    </label>
                    <div class="editor-toolbar">
                        <button type="button" onclick="formatText('bold')" title="Negrita">
                            <i class="material-icons">format_bold</i>
                        </button>
                        <button type="button" onclick="formatText('italic')" title="Cursiva">
                            <i class="material-icons">format_italic</i>
                        </button>
                        <button type="button" onclick="formatText('underline')" title="Subrayado">
                            <i class="material-icons">format_underlined</i>
                        </button>
                        <button type="button" onclick="insertHeading(2)" title="Título">
                            <i class="material-icons">title</i>
                        </button>
                        <button type="button" onclick="insertList('ul')" title="Lista">
                            <i class="material-icons">format_list_bulleted</i>
                        </button>
                        <button type="button" onclick="insertList('ol')" title="Lista numerada">
                            <i class="material-icons">format_list_numbered</i>
                        </button>
                    </div>
                    <div
                        id="content"
                        contenteditable="true"
                        class="content-editor"
                        placeholder="Escribe el contenido de la novedad aquí..."
                    ></div>
                    <input type="hidden" name="content" id="contentInput">
                </div>

                <div class="form-group">
                    <label for="tags">
                        <i class="material-icons">label</i>
                        Etiquetas
                    </label>
                    <input
                        type="text"
                        id="tags"
                        name="tags"
                        placeholder="Etiquetas separadas por comas"
                    >
                </div>

                <div class="form-actions">
                    <button type="button" onclick="closeNewsModal()" class="btn btn-secondary">
                        <i class="material-icons">close</i> Cancelar
                    </button>
                    <button type="button" onclick="saveNews()" class="btn btn-primary">
                        <i class="material-icons">publish</i> Publicar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        async function openDetailModal(newsId) {
            const modal = document.getElementById('detailModal');
            const content = document.getElementById('detailContent');

            modal.style.display = 'flex';
            content.innerHTML = '<div class="loading"><i class="material-icons rotating">refresh</i> Cargando...</div>';

            try {
                const queryParams = new URLSearchParams(window.location.search);
                const response = await fetch(`/news/${newsId}?${queryParams}`);
                const html = await response.text();

                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const article = doc.querySelector('.news-article');

                if (article) {
                    content.innerHTML = article.outerHTML;

                    const likeBtn = content.querySelector('#likeBtn');
                    if (likeBtn) {
                        const originalOnclick = likeBtn.getAttribute('onclick');
                        likeBtn.removeAttribute('onclick');
                        likeBtn.addEventListener('click', function() {
                            const match = originalOnclick.match(/'([^']+)'/);
                            if (match) {
                                toggleLikeInModal(match[1]);
                            }
                        });
                    }
                } else {
                    content.innerHTML = '<div class="error-message"><i class="material-icons">error</i> Error al cargar la novedad</div>';
                }
            } catch (error) {
                console.error('Error:', error);
                content.innerHTML = '<div class="error-message"><i class="material-icons">error</i> Error al cargar la novedad</div>';
            }
        }

        function closeDetailModal() {
            document.getElementById('detailModal').style.display = 'none';
        }

        async function toggleLikeInModal(newsId) {
            const btn = document.querySelector('#detailContent #likeBtn');
            const icon = btn.querySelector('.material-icons');
            const countSpan = btn.querySelector('#likeCount');

            try {
                const queryParams = new URLSearchParams(window.location.search);
                const response = await fetch(`/news/${newsId}/like?${queryParams}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    if (result.liked) {
                        btn.classList.add('liked');
                        icon.textContent = 'favorite';
                    } else {
                        btn.classList.remove('liked');
                        icon.textContent = 'favorite_border';
                    }
                    countSpan.textContent = result.likeCount;
                }
            } catch (error) {
                console.error('Error toggling like:', error);
            }
        }

        function openNewsModal() {
            document.getElementById('newsModal').style.display = 'flex';
            document.getElementById('content').innerHTML = '';
        }

        function closeNewsModal() {
            document.getElementById('newsModal').style.display = 'none';
            document.getElementById('newsForm').reset();
            document.getElementById('content').innerHTML = '';
        }

        function formatText(command) {
            document.execCommand(command, false, null);
            document.getElementById('content').focus();
        }

        function insertHeading(level) {
            const selection = window.getSelection();
            const range = selection.getRangeAt(0);
            const heading = document.createElement(`h${level}`);
            heading.textContent = selection.toString() || 'Título';
            range.deleteContents();
            range.insertNode(heading);
            selection.removeAllRanges();
        }

        function insertList(type) {
            const list = type === 'ul' ?
                document.createElement('ul') :
                document.createElement('ol');
            const li = document.createElement('li');
            li.textContent = 'Elemento de lista';
            list.appendChild(li);

            const selection = window.getSelection();
            const range = selection.getRangeAt(0);
            range.deleteContents();
            range.insertNode(list);
            selection.removeAllRanges();
        }

        async function saveNews() {
            const form = document.getElementById('newsForm');
            const contentEditor = document.getElementById('content');
            const contentInput = document.getElementById('contentInput');

            contentInput.value = contentEditor.innerHTML;

            const title = form.title.value.trim();
            const content = contentInput.value.trim();

            if (!title) {
                alert('El título es obligatorio');
                return;
            }

            if (!content || content === '<br>') {
                alert('El contenido es obligatorio');
                return;
            }

            const formData = {
                title: title,
                content: content,
                excerpt: form.excerpt.value.trim(),
                status: form.status.value,
                priority: form.priority.value,
                tags: form.tags.value,
                action: 'publish'
            };

            try {
                const queryParams = new URLSearchParams(window.location.search);
                const url = `/news/new?${queryParams}`;

                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    closeNewsModal();
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al guardar la novedad');
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const contentEditor = document.getElementById('content');

            if (contentEditor) {
                contentEditor.addEventListener('focus', function() {
                    if (this.innerHTML === '') {
                        this.innerHTML = '<br>';
                    }
                });

                contentEditor.addEventListener('blur', function() {
                    if (this.innerHTML === '<br>') {
                        this.innerHTML = '';
                    }
                });
            }

            const newsModal = document.getElementById('newsModal');
            if (newsModal) {
                window.onclick = function(event) {
                    if (event.target == newsModal) {
                        closeNewsModal();
                    } else if (event.target == document.getElementById('detailModal')) {
                        closeDetailModal();
                    }
                };
            }
        });
    </script>

