<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Productos - <%= cooperativaName %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta name="csrf-token" content="">
</head>
<body class="modular-view <%= darkMode ? 'dark-mode' : '' %>">
    <div class="modular-header">
        <h1><i class="material-icons">store</i> Gestión de Productos - <%= cooperativaName %></h1>
        <div class="header-actions">
            <a href="/products/form/new?<%= Object.entries(locals).filter(([k,v]) => ['cooperativaId','cooperativaName','userName','userId','isAdmin','darkMode','token'].includes(k)).map(([k,v]) => `${k}=${encodeURIComponent(v)}`).join('&') %>" class="btn btn-primary">
                <i class="material-icons">add</i> Nuevo Producto
            </a>
        </div>
    </div>

    <div class="admin-container">
        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="material-icons">inventory_2</i>
                </div>
                <div class="stat-content">
                    <h3><%= stats.totalProducts %></h3>
                    <p>Total Productos</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="material-icons">shopping_cart</i>
                </div>
                <div class="stat-content">
                    <h3><%= stats.totalOrders %></h3>
                    <p>Total Pedidos</p>
                </div>
            </div>
            <div class="stat-card pending">
                <div class="stat-icon">
                    <i class="material-icons">hourglass_empty</i>
                </div>
                <div class="stat-content">
                    <h3><%= stats.pendingOrders %></h3>
                    <p>Pedidos Pendientes</p>
                </div>
            </div>
            <div class="stat-card revenue">
                <div class="stat-icon">
                    <i class="material-icons">attach_money</i>
                </div>
                <div class="stat-content">
                    <h3>$<%= stats.totalRevenue.toLocaleString() %></h3>
                    <p>Ingresos Totales</p>
                </div>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <div class="nav-tabs">
            <button class="tab-btn active" onclick="switchTab('products')">
                <i class="material-icons">inventory_2</i> Productos
            </button>
            <button class="tab-btn" onclick="switchTab('orders')">
                <i class="material-icons">shopping_cart</i> Pedidos Recientes
            </button>
        </div>

        <!-- Products Tab -->
        <div id="products-tab" class="tab-content active">
            <div class="section-header">
                <h2>Productos Recientes</h2>
                <a href="/products/list?<%= Object.entries(locals).filter(([k,v]) => ['cooperativaId','cooperativaName','userName','userId','isAdmin','darkMode','token'].includes(k)).map(([k,v]) => `${k}=${encodeURIComponent(v)}`).join('&') %>" class="btn btn-secondary">
                    Ver Todos
                </a>
            </div>

            <% if (products && products.length > 0) { %>
                <div class="products-grid">
                    <% products.forEach(function(product) { %>
                        <div class="product-card">
                            <div class="product-image">
                                <% if (product.image) { %>
                                    <img src="<%= product.image %>" alt="<%= product.name %>">
                                <% } else { %>
                                    <div class="no-image">
                                        <i class="material-icons">image</i>
                                    </div>
                                <% } %>
                                <div class="product-status status-<%= product.status %>">
                                    <%= product.status === 'active' ? 'Activo' : 
                                        product.status === 'inactive' ? 'Inactivo' : 
                                        product.status === 'completed' ? 'Completado' : 'Pendiente' %>
                                </div>
                            </div>
                            <div class="product-info">
                                <h3><%= product.name %></h3>
                                <p class="product-price">
                                    <% if (product.hasTypes) { %>
                                        Desde $<%= Math.min(...product.types.map(t => t.price)).toLocaleString() %>
                                    <% } else { %>
                                        $<%= product.price.toLocaleString() %>
                                    <% } %>
                                </p>
                                <p class="product-deadline">
                                    Vence: <%= new Date(product.deadlineDate).toLocaleDateString('es-ES') %>
                                </p>
                                <div class="product-meta">
                                    <span class="category"><%= product.category %></span>
                                    <span class="stock">Stock: <%= product.stock %></span>
                                </div>
                            </div>
                            <div class="product-actions">
                                <a href="/products/form/<%= product._id %>?<%= Object.entries(locals).filter(([k,v]) => ['cooperativaId','cooperativaName','userName','userId','isAdmin','darkMode','token'].includes(k)).map(([k,v]) => `${k}=${encodeURIComponent(v)}`).join('&') %>" class="btn-action btn-edit" title="Editar">
                                    <i class="material-icons">edit</i>
                                </a>
                                <button onclick="deleteProduct('<%= product._id %>')" class="btn-action btn-delete" title="Eliminar">
                                    <i class="material-icons">delete</i>
                                </button>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="material-icons">inventory_2</i>
                    <h3>No hay productos</h3>
                    <p>Aún no has creado ningún producto.</p>
                    <a href="/products/form/new?<%= Object.entries(locals).filter(([k,v]) => ['cooperativaId','cooperativaName','userName','userId','isAdmin','darkMode','token'].includes(k)).map(([k,v]) => `${k}=${encodeURIComponent(v)}`).join('&') %>" class="btn btn-primary">
                        <i class="material-icons">add</i> Crear Primer Producto
                    </a>
                </div>
            <% } %>
        </div>

        <!-- Orders Tab -->
        <div id="orders-tab" class="tab-content">
            <div class="section-header">
                <h2>Pedidos Recientes</h2>
                <a href="/products/orders?<%= Object.entries(locals).filter(([k,v]) => ['cooperativaId','cooperativaName','userName','userId','isAdmin','darkMode','token'].includes(k)).map(([k,v]) => `${k}=${encodeURIComponent(v)}`).join('&') %>" class="btn btn-secondary">
                    Ver Todos
                </a>
            </div>

            <% if (orders && orders.length > 0) { %>
                <div class="table-responsive">
                    <table class="orders-table">
                        <thead>
                            <tr>
                                <th>Cliente</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Total</th>
                                <th>Estado</th>
                                <th>Fecha</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(function(order) { %>
                                <tr>
                                    <td>
                                        <% if (order.userId) { %>
                                            <%= order.userId.firstName %> <%= order.userId.lastName %>
                                        <% } else { %>
                                            Usuario no disponible
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (order.productId) { %>
                                            <%= order.productId.name %>
                                        <% } else { %>
                                            Producto no disponible
                                        <% } %>
                                    </td>
                                    <td><%= order.quantity %></td>
                                    <td>$<%= order.totalPrice.toLocaleString() %></td>
                                    <td>
                                        <span class="order-status status-<%= order.status %>">
                                            <%= order.status === 'pending' ? 'Pendiente' :
                                                order.status === 'paid' ? 'Pagado' :
                                                order.status === 'delivered' ? 'Entregado' :
                                                order.status === 'cancelled' ? 'Cancelado' :
                                                order.status === 'processing' ? 'Procesando' : 'Devuelto' %>
                                        </span>
                                    </td>
                                    <td><%= new Date(order.createdAt).toLocaleDateString('es-ES') %></td>
                                    <td>
                                        <div class="order-actions">
                                            <button onclick="updateOrderStatus('<%= order._id %>', 'processing')" class="btn-mini btn-primary" title="Procesar">
                                                <i class="material-icons">play_arrow</i>
                                            </button>
                                            <button onclick="updateOrderStatus('<%= order._id %>', 'delivered')" class="btn-mini btn-success" title="Entregar">
                                                <i class="material-icons">check</i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="material-icons">shopping_cart</i>
                    <h3>No hay pedidos</h3>
                    <p>Aún no se han realizado pedidos.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        function switchTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });

            // Show selected tab
            document.getElementById(tabName + '-tab').classList.add('active');
            event.target.classList.add('active');
        }

        async function deleteProduct(productId) {
            if (!confirm('¿Estás seguro de que quieres eliminar este producto? Esta acción no se puede deshacer.')) {
                return;
            }

            try {
                const queryParams = new URLSearchParams(window.location.search);
                const response = await fetch(`/products/${productId}?${queryParams}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    alert('Producto eliminado exitosamente');
                    location.reload();
                } else {
                    alert('Error al eliminar el producto: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al eliminar el producto');
            }
        }

        async function updateOrderStatus(orderId, status) {
            try {
                const queryParams = new URLSearchParams(window.location.search);
                const response = await fetch(`/products/orders/${orderId}/status?${queryParams}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ status })
                });

                const result = await response.json();

                if (result.success) {
                    location.reload();
                } else {
                    alert('Error al actualizar el pedido: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al actualizar el pedido');
            }
        }
    </script>

