            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .commissions-container {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        .page-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .page-title {
            margin: 0 0 0.5rem 0;
            font-size: 2.5rem;
            color: #2d3748;
            background: linear-gradient(45deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-description {
            margin: 0;
            color: #64748b;
            font-size: 1.125rem;
        }

        .commission-statistics {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            gap: 1.5rem;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

        .stat-card .material-icons {
            font-size: 3rem;
            color: #667eea;
        }

        .stat-info {
            display: flex;
            flex-direction: column;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #2d3748;
        }

        .stat-label {
            font-size: 0.875rem;
            color: #64748b;
        }

        .admin-section {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .section-header h2 {
            margin: 0 0 1.5rem 0;
            color: #2d3748;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .section-header .material-icons {
            color: #667eea;
        }

        .create-commission-form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-group label {
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #4b5563;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            padding: 0.75rem;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            font-family: inherit;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .commissions-list {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .commission-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .commission-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

        .commission-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .commission-header h3 {
            margin: 0;
            color: #2d3748;
            font-size: 1.5rem;
        }

        .stage-badge {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .stage-badge.obra {
            background: rgba(245, 158, 11, 0.1);
            color: #f59e0b;
        }

        .stage-badge.permanentes {
            background: rgba(16, 185, 129, 0.1);
            color: #10b981;
        }

        .stage-badge.convivencia {
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
        }

        .commission-description {
            color: #64748b;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .commission-members h4 {
            margin: 0 0 1rem 0;
            color: #4b5563;
            font-size: 1.125rem;
        }

        .members-list {
            list-style: none;
            padding: 0;
            margin: 0 0 1.5rem 0;
        }

        .members-list li {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem;
            background: rgba(102, 126, 234, 0.05);
            border-radius: 8px;
            margin-bottom: 0.5rem;
            flex-wrap: wrap;
        }

        .member-name {
            font-weight: 600;
            color: #2d3748;
        }

        .member-role {
            padding: 0.25rem 0.75rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .member-role.titular {
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
        }

        .member-role.suplente {
            background: rgba(100, 116, 139, 0.1);
            color: #64748b;
        }

        .member-detail {
            color: #64748b;
            font-size: 0.875rem;
        }

        .btn-remove-member {
            margin-left: auto;
            padding: 0.25rem;
            background: rgba(239, 68, 68, 0.1);
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
            color: #ef4444;
        }

